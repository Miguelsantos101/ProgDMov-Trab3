<resources>

    <style name="Base.Theme.TaskHero" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#1B801D</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <item name="toolbarStyle">@style/Widget.TaskHero.Toolbar</item>
        <item name="android:statusBarColor">@color/green_light</item>
    </style>

    <style name="Theme.TaskHero" parent="Base.Theme.TaskHero" />

    <style name="Widget.TaskHero.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TaskHero.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Widget.TaskHero.Toolbar.TitleText</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.TaskHero.TextView" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:minHeight">@dimen/touch_target_minimum_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.TaskHero.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="Widget.TaskHero.Button" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/touch_target_minimum_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/button_ripple_color</item>
    </style>

    <style name="Widget.TaskHero.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="colorContainer">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.TaskHero.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemIconTint">@color/bottom_nav_item_tint</item>
        <item name="itemTextColor">@color/bottom_nav_item_tint</item>
    </style>

</resources>
